# Airbyte configuration
AIRBYTE_API_BASE_URL=http://host.docker.internal:8000

# Core Airflow settings
AIRFLOW__CORE__FERNET_KEY=${AIRFLOW__CORE__FERNET_KEY:?FERNET KEY REQUIRED}
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Database connection (PostgreSQL for local dev)
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow

# Optional UID mapping to prevent permission issues
AIRFLOW_UID=50000


